<%- layout("layouts/boilerplate") %> 
<div class="row">
  <div class="col-8 offset-2">

 
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="label-form">
          Title
        </label>

        
      <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"  required/>
    </div>
      <div class="mb-3">
        <label for="description" class="label-form">
          Description
        </label>

      <textarea name="listing[description]" class="form-control">
<%= listing.description %>required</textarea
      >
      </div>
      <div class="mb-3">
        <label for="image" class="label-form">
          Title
        </label>

      <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" required/>
      </div>
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="label-form">
          Price
        </label>

      <input name="listing[price]" value="<%= listing.price %>" type="number" />
      </div>
      <div class="mb-3 col-md-4">
        <label for="country" class="label-form">
          country
        </label>
        <input
        name="listing[country]"
        value="<%= listing.country %>"
        type="text" class="form-control" required
      />
      </div>
    </div>
      <div class="mb-3">
        <label for="location" class="label-form">
          Location
        </label>

      <input
        name="listing[location]"
        value="<%= listing.location %>"
        type="text" required
      />
      </div>
      <button class="btn btn-dark edit-btn">Edit</button>
    </form>
  </div>
</div>

 